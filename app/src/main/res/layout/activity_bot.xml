<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sghaier.foodin.Bot">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView2">

    </ScrollView>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/topcorner"
                android:gravity="center_vertical|center_horizontal"
                android:layout_toRightOf="@+id/imageView29"
                android:layout_toEndOf="@+id/imageView29"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/linearLayout14">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="60dp"
                        android:gravity="center"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Bonjour, que dÃ©sirez-vous \n manger ?"
                        android:id="@+id/bot_tv_bonjour" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:background="@drawable/botshape"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Asiatique"
                    android:textColor="@color/rose_clear"
                    android:id="@+id/bot_tv_asiatique" />

                <TextView
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:textColor="@color/rose_clear"
                    android:layout_height="40dp"
                    android:background="@drawable/botshape"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Burger"
                    android:id="@+id/bot_tv_burger" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="RIZ"
                    android:visibility="gone"
                    android:textColor="@color/rose_clear"
                    android:background="@drawable/botshape"
                    android:gravity="center"
                    android:id="@+id/bot_tv_riz" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:textColor="@color/rose_clear"
                    android:background="@drawable/botshape"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Oriental"
                    android:visibility="gone"
                    android:id="@+id/bot_tv_oriental" />

                <LinearLayout
                    android:orientation="vertical"

                    android:layout_width="match_parent"
                    android:paddingBottom="10dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Voir Plus"
                        android:gravity="center"
                        android:layout_height="40dp"
                        android:id="@+id/bot_tv_plus"/>

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView29"
                android:src="@drawable/fooderlogogrand"
                android:layout_alignBottom="@+id/linearLayout14"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:visibility="gone"
            android:id="@+id/linearreponse1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Asiatique"

                android:background="@color/black"
                android:textColor="@color/white"
                android:id="@+id/bot_tv_reponse1"
                android:layout_marginRight="30dp"
                android:gravity="center_vertical|center_horizontal" />

            <ImageView
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:id="@+id/imageView30"
                android:src="@drawable/avatar" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
